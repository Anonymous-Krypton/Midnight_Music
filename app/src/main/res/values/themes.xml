<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
  </style>

  <style name="AppTheme" parent="Base.AppTheme" />

  <style name="Theme.MidnightMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colors -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/primary_variant</item>
    <item name="colorOnPrimary">@color/on_primary</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorSecondary">@color/accent</item>
    <item name="colorSecondaryVariant">@color/accent_variant</item>
    
    <!-- Background colors -->
    <item name="android:colorBackground">@color/background</item>
    <item name="colorSurface">@color/surface</item>
    <item name="colorError">@color/error</item>
    
    <!-- Text colors -->
    <item name="colorOnBackground">@color/on_background</item>
    <item name="colorOnSurface">@color/on_surface</item>
    <item name="colorOnError">@color/on_error</item>
    
    <!-- System bars -->
    <item name="android:statusBarColor">@color/background</item>
    <item name="android:navigationBarColor">@color/background</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    
    <!-- Typography -->
    <item name="textAppearanceHeadline1">@style/TextAppearance.MidnightMusic.Headline1</item>
    <item name="textAppearanceHeadline2">@style/TextAppearance.MidnightMusic.Headline2</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.MidnightMusic.Subtitle1</item>
    <item name="textAppearanceBody1">@style/TextAppearance.MidnightMusic.Body1</item>
    <item name="textAppearanceCaption">@style/TextAppearance.MidnightMusic.Caption</item>
    
    <!-- Component styles -->
    <item name="materialCardViewStyle">@style/Widget.MidnightMusic.CardView</item>
    <item name="bottomNavigationStyle">@style/Widget.MidnightMusic.BottomNavigationView</item>
    <item name="materialButtonStyle">@style/Widget.MidnightMusic.Button</item>
    <item name="tabStyle">@style/Widget.MidnightMusic.TabLayout</item>
  </style>

  <!-- Typography Styles -->
  <style name="TextAppearance.MidnightMusic.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    <item name="fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">32sp</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="TextAppearance.MidnightMusic.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    <item name="fontFamily">@font/poppins_semibold</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="TextAppearance.MidnightMusic.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <style name="TextAppearance.MidnightMusic.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/poppins</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="TextAppearance.MidnightMusic.Caption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="fontFamily">@font/poppins</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- Component Styles -->
  <style name="Widget.MidnightMusic.CardView" parent="Widget.MaterialComponents.CardView">
    <item name="cardBackgroundColor">@color/card_background</item>
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">4dp</item>
    <item name="rippleColor">@color/ripple_accent</item>
  </style>

  <style name="Widget.MidnightMusic.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="backgroundTint">@color/background</item>
    <item name="itemIconTint">@color/bottom_nav_item_color</item>
    <item name="itemTextColor">@color/bottom_nav_item_color</item>
    <item name="itemRippleColor">@color/ripple_accent</item>
    <item name="elevation">8dp</item>
  </style>

  <style name="Widget.MidnightMusic.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">@color/text_primary</item>
    <item name="backgroundTint">@color/accent</item>
    <item name="cornerRadius">24dp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="rippleColor">@color/ripple_light</item>
  </style>

  <style name="Widget.MidnightMusic.TabLayout" parent="Widget.MaterialComponents.TabLayout">
    <item name="tabBackground">@color/background</item>
    <item name="tabIndicatorColor">@color/accent</item>
    <item name="tabSelectedTextColor">@color/text_primary</item>
    <item name="tabTextColor">@color/text_secondary</item>
    <item name="tabRippleColor">@color/ripple_accent</item>
    <item name="tabIndicatorHeight">3dp</item>
    <item name="tabIndicatorAnimationDuration">250</item>
  </style>
</resources>